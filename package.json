{
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./css/style.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./css/style.css --watch",
    "start": "npx http-server -c-1 . -p 3000",
    "dev": "concurrently \"npm:watch:css\" \"npm:start\" --names tailwind,server --prefix name --kill-others"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.38",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "tailwindcss": "^3.4.3"
  }
}
